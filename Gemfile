gem 'jbuilder', '~> 2.5'
gem 'devise'
gem 'devise_invitable', '~> 1.7.0'
gem 'bootstrap', '~> 4.0.0'
gem 'jquery-rails'
gem "font-awesome-rails"
gem 'mailboxer', github: 'mailboxer/mailboxer'
gem 'mini_magick'
gem 'activeadmin'

