<!DOCTYPE html>
<html>
  <head>
    <title>PaperProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
    <div class="container">
      <div class="row">
        <div class="col col-lg-1">
          <div id="sidebar-wrapper">
              <ul class="sidebar-nav">
                  <li class="sidebar-brand">
                      <a href="#">
                          Start Bootstrap
                      </a>
                  </li>
                  <li>
                      <a href="#">Dashboard</a>
                  </li>
                  <li>
                      <a href="#">Shortcuts</a>
                  </li>
                  <li>
                      <a href="#">Overview</a>
                  </li>
                  <li>
                      <a href="#">Events</a>
                  </li>
                  <li>
                      <a href="#">About</a>
                  </li>
                  <li>
                      <a href="#">Services</a>
                  </li>
                  <li>
                      <%= link_to "Çıkış", destroy_user_session_path, method: :delete %>
                  </li>
              </ul>
          </div>
        </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <div class="fluid-container col col-lg-8">
          <div class="row">
            <div class="col-sm-6">
              <% if user_signed_in? %>
                <h5> Chat Rooms </h5>
                <ul>
                <% current_user.chatrooms.each do |chatroom| %>
                  <li><%= link_to chatroom.name, chatroom, data: {behavior: "chatroom-link", chatroom_id: chatroom.id} %> </li>
                  <% end %>
                </ul>
              <% end %>
            </div>
            <div class="col-sm-6 col-sm-offset-2">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% else %>
        <%= yield %>
    <% end %>
  </body>
</html>
