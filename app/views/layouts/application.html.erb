<!DOCTYPE html>
<html>
  <head>
    <title>PaperProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
    <div class="container">
      <div class="row">
        <div class="col col-lg-1">
          <div id="sidebar-wrapper">
              <ul class="sidebar-nav">
                  <li class="sidebar-brand">
                      <a href="#">
                          Paper Project <%= current_user.username %>
                      </a>
                  </li>
                  <li>
                    Channels <%= link_to fa_icon "plus" %>
                  </li>
                  <% current_user.chatrooms.each do |chatroom| %>
                    <li><%= link_to chatroom.name, chatroom, data: {behavior: "chatroom-link", chatroom_id: chatroom.id} %> </li>
                    <% end %>
                  <li>
                      <%= link_to "Çıkış", destroy_user_session_path, method: :delete %>
                  </li>
                  <li>
                    Direct Messages
                  </li>
                  <% User.all.each do |user| %>
                    <li>
                      <%= link_to user.username, create_direct_path(user) %>
                    </li>
                  <% end %>
              </ul>

          </div>
        </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <div class="fluid-container col col-lg-8">
          <div class="row">
            <div class="col-sm-6 col-sm-offset-2">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% else %>
        <%= yield %>
    <% end %>
  </body>
</html>
